{
  "name": "Ionbiz Ticket Sharing",
  "description": "Easily share Ionbiz tickets.",
  "version": "0.8.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "URL": {
      "suggested_key": "Alt+Q",
      "description": "Copy ticket URL"
    },
    "LINK": {
      "suggested_key": "Alt+W",
      "description": "Copy ticket hyperlink"
    },
    "TEXT_AND_URL": {
      "suggested_key": "Alt+A",
      "description": "Copy ticket name and URL"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus"
  ]
}