{
  "name": "Ionbiz Ticket Sharing",
  "description": "Easily share Ionbiz tickets.",
  "version": "0.5.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "URL": {
      "suggested_key": "Alt+Shift+A",
      "description": "Copy URL"
    },
    "TEXT": {
      "suggested_key": "Alt+Shift+Z",
      "description": "Copy ticket Info"
    },
    "LINK": {
      "suggested_key": "Alt+Shift+E",
      "description": "Copy ticket Info (HTML Link)"
    },
    "TEXT_AND_URL": {
      "suggested_key": "Alt+Shift+R",
      "description": "Copy ticket info and URL"
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus"
  ]
}