{
  "name": "Ionbiz Ticket Sharing",
  "description": "Easily share Ionbiz tickets.",
  "version": "0.4.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "share_ticket_url": {
      "suggested_key": "Alt+Shift+A",
      "description": "Share URL"
    },
    "share_ticket_info": {
      "suggested_key": "Alt+Shift+Z",
      "description": "Share ticket Info"
    },
    "share_ticket_info_html_link": {
      "suggested_key": "Alt+Shift+E",
      "description": "Share ticket Info (HTML Link)"
    },
    "share_ticket_info_and_url": {
      "suggested_key": "Alt+Shift+R",
      "description": "Share ticket info and URL"
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ]
}