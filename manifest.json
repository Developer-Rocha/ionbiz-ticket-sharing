{
  "name": "Ionbiz Ticket Sharing",
  "description": "A browser extension to easily share Ionbiz ticket info",
  "version": "0.3.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}